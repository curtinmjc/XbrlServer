doctype html
html(ng-app="statementsApp")
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/bootstrap.min.css', media='all')
        link(rel='stylesheet', href='/stylesheets/statements.css', media='all')
        link(rel='stylesheet', href='/stylesheets/angucomplete.css', media='all')
        script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js")
        script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
        script(src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.0/jquery-ui.min.js")
        script(src="/scripts/statements.js")
        script(src="/scripts/angucomplete.js")
    body#statmentsController(ng-controller="StatementsController as statements")
        .container-fluid
            .row
                .col-md-2
                .col-md-8
                    .panel.panel-primary
                        .panel-heading
                            h3 Start Here
                            p Find a company then click Add.  Click Start Over to clear.
                        .panel-content
                            .row
                                .col-md-9
                                    angucomplete.form-control(id="companies", tabindex="0" pause="400", selectedObject="statements.selectedEntity", url="/companies?term=", titlefield="value", placeholder="Search for a company...")
                                .col-md-3
                                    a#addCompany.btn.btn-sm.btn-primary(ng-href="#", ng-click="statements.addEntity()", role="button",style="width: 100px; margin: 6px;", tabindex="1") Add
                                    | Or
                                    a#startOver.btn.btn-sm.btn-primary(ng-href="#", ng-click="statements.startOver()", ,role="button",style="width: 100px; margin: 6px;", tabindex="2") Start Over
                    .panel.panel-primary
                        .panel-heading
                            h3 Balance Sheet
                            p All values in millions USD unless specified otherwise
                        .panel-content
                            #bsTable.table-container
                                .headcol#bsTableHeadCol
                                    table.headColTable
                                        thead
                                            tr
                                                th.topLeft &nbsp;
                                            tr
                                                th.topLeft &nbsp;
                                        tbody
                                            tr
                                                td.indent1x(ng-style="statements.highlightConcepts['CurrentAssets']") Current Assets
                                            tr
                                                td.indent1x Noncurrent Assets
                                            tr.totalRow
                                                td Assets
                                            tr
                                                td.indent1x Current Liabilities
                                            tr
                                                td.indent1x Noncurrent Liabilities
                                            tr.totalRow
                                                td Liabilities
                                            tr
                                                td Commitments and Contingencies
                                            tr
                                                td Temporary Equity and Redeemable Noncontrolling Interest
                                            tr
                                                td.indent1x Equity Attributable to Parent
                                            tr
                                                td.indent1x Equity Attributable to Noncontrolling Interest
                                            tr.totalRow
                                                td Equity
                                            tr
                                                td Liabilities and Equity
                                .right#bsTableRight
                                    img.loaderImage(src="images/ajax-loader-black-transparent.gif", ng-show="statements.loading")
                                    table.dataTable(ng-show="statements.loaded")
                                        thead
                                            tr
                                                th(ng-repeat="date in statements.instantDates track by $index", ng-attr-colspan="{{statements.entities.length}}") {{date}}
                                            tr
                                                th(ng-repeat="entity in statements.instantEntities track by $index") {{entity}}
                                        tbody
                                            tr
                                                td(ng-repeat="fact in statements.bsFacts.CurrentAssets track by $index") {{fact || "&nbsp;"}}
                                            tr
                                                td(ng-repeat="fact in statements.bsFacts.NoncurrentAssets track by $index") {{fact || "&nbsp;"}}
                                            tr.totalRow
                                                td(ng-repeat="fact in statements.bsFacts.Assets track by $index") {{fact || "&nbsp;"}}
                                            tr
                                                td(ng-repeat="fact in statements.bsFacts.CurrentLiabilities track by $index") {{fact || "&nbsp;"}}
                                            tr
                                                td(ng-repeat="fact in statements.bsFacts.NoncurrentLiabilities track by $index") {{fact || "&nbsp;"}}
                                            tr.totalRow
                                                td(ng-repeat="fact in statements.bsFacts.Liabilities track by $index") {{fact || "&nbsp;"}}
                                            tr
                                                td(ng-repeat="fact in statements.bsFacts.CommitmentsAndContingencies track by $index") {{fact || "&nbsp;"}}
                                            tr
                                                td(ng-repeat="fact in statements.bsFacts.TemporaryEquity track by $index") {{fact || "&nbsp;"}}
                                            tr
                                                td(ng-repeat="fact in statements.bsFacts.EquityAttributableToParent track by $index") {{fact || "&nbsp;"}}
